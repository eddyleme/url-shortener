<h1>Urls#index</h1>

<table>
  <thead>
    <tr>
      <th>Long</th>
      <th>Short</th>
      <th>id</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @urls.each do |url| %>
      <tr>
        <td><%= url.long %></td>
        <td><%= url.short %></td>
        <td><%= url.id %></td>
        <td><%= link_to 'Show', url %></td>
        <td><%= link_to 'Destroy', url, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Url', new_url_path %>